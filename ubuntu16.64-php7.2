rm -rf /var/www/html


sed -i "s/^memory_limit = 128M/memory_limit = 512M/" /etc/php/7.2/fpm/php.ini

sed -i "s/^pm.max_children = 5/pm.max_children = 50/" /etc/php/7.2/fpm/pool.d/www.conf

#sed -i "s/^pm.start_servers = 2/pm.start_servers = 10/" /etc/php/7.2/fpm/pool.d/www.conf

#sed -i "s/^pm.min_spare_servers = 1/pm.min_spare_servers = 5/" /etc/php/7.2/fpm/pool.d/www.conf

