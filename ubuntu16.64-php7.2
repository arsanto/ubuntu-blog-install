apt-add-repository ppa:ondrej/php -y
apt-get update


#install php
apt-get -y install unzip zip nginx fail2ban php7.2 php7.2-zip php7.2-mysql php7.2-gd php7.2-gd php7.2-cli php7.2-fpm php7.2-mbstring php7.2-xml php7.2-curl htop


